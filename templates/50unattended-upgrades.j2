// Automatically upgrade packages from these (origin:archive) pairs
Unattended-Upgrade::Allowed-Origins {
        "${distro_id}:${distro_codename}-security";
        "${distro_id}:${distro_codename}-updates";
};

// List of packages to not update
Unattended-Upgrade::Package-Blacklist {
//      "vim";
};

{% if unattended_mail %}
Unattended-Upgrade::Mail "{{ unattended_mail }}";
Unattended-Upgrade::MailOnlyOnError "{{ unattended_mail_only_on_error | ternary('true','false') }}";
{% endif %}

Unattended-Upgrade::Remove-Unused-Kernel-Packages "true";
Unattended-Upgrade::Remove-Unused-Dependencies "true";
Unattended-Upgrade::MinimalSteps "{{ unattended_minimal_steps | ternary('true','false') }}";

Unattended-Upgrade::Automatic-Reboot "{{ unattended_reboot | ternary('true','false') }}";
Unattended-Upgrade::Automatic-Reboot-Time "{{ unattended_reboot_time }}";

# {{ ansible_managed | comment }}
