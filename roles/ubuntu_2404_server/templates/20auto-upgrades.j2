// Check for upgrades every day
APT::Periodic::Update-Package-Lists "{{ apt_periodic_update }}";

// Download upgradable packages every day
APT::Periodic::Download-Upgradeable-Packages "{{ apt_periodic_download }}";

// Run a package upgrade every day
APT::Periodic::Unattended-Upgrade "{{ apt_periodic_upgrade }}";

// Clean the local archive every week
APT::Periodic::AutocleanInterval "{{ apt_periodic_autoclean }}";

// Jitter to avoid herd effects
APT::Periodic::RandomSleep "{{ apt_periodic_random_sleep }}";

